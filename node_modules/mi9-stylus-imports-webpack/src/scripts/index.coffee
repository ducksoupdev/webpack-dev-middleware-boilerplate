glob = require 'glob'

module.exports = ->
    webpackRoot = process.cwd()
    webpackStylusImports = []

    glob.sync('**/_variables.styl').forEach (filePath) ->
        webpackStylusImports.push webpackRoot + '/' + filePath

    glob.sync('**/_mixins.styl').forEach (filePath) ->
        webpackStylusImports.push webpackRoot + '/' + filePath

    webpackStylusImports