article(class='article module showVideoPlaylist showVideoPlaceholder', data-module='decorators/trackingDecorator')
    //- Headline
    h1.article__headline
        != current.headline

    //- Author
    .article__byline
        != partials.author({model: current.author})

    //- Time Ago
    span(class='article__time--desktop time')
        != current.displayDateTime

    //- Header Video / Image block
    if current.media.type == "video"
        != partials.videoBlock({model: current, partials: partials})
    else
        != partials.imageResizer({model: current.media})
    //- Caption
    if current.media.caption
        .article__hero-caption
            != current.media.caption

    //- Sharing stuff
    .article__social
        if settings.enableGigyaSharingButtons
            div(class="article__share share--responsive")
                != partials.share(current.shareData)
        if settings.enableGigyaComments
            a(href="#comments", class="article__comments-jump", data-tracking-link-name="article__comments-jump")
                .article__comments-icon
                span Comments

    //- Article content
    span(class="article__time--mobile time")
        != current.displayDateTime
    .article__body
        != current.bodyCopy
    //- Tags
    ul.article__tags
        if tracking.site != null
            li.article__tag
                a(href="/#{tracking.site}", data-tracking-link-name="article_section")
                    != tracking.site
        each tag in current.tags
            li.article__tag
                a(href="/#{tag.url}", data-tracking-link-name="article__tag")
                    != tag.name

    //- Related
    .article__related
        if previous
            div(class="article__related-item article__related-item--previous")
                h3 Previous
                != partials.related({trackingLinkName: 'article_previous', model: previous, partials: partials})
        if next
            - trackingLinkName = 'article_next'
            div(class="article__related-item article__related-item--next")
                h3 Next
                != partials.related({trackingLinkName: 'article_next', model: next, partials: partials})

    //- Outbrain
    if settings.enableOutbrainRecommended
        .article__outbrain
            != partials.outbrain({model: {url: meta.url, widgetId: outbrain.widgetId, obTemplate: outbrain.obTemplate}})

    //- Gigya comments
    if settings.enableGigyaComments
        div#comments.article__comments
            h3.article_comments-header Post a comment on this story
            != partials.comments({model: {id: current.id, url: current.url, sitename: meta.sitename}})