block footer
    mixin galleryAd
        .gallery__utility-ad
            != includePartial('ad--ext', {adType: 'MEDIUM', location: 'TOP.1', classes: 'module', moduleDecorator: 'default.ad', moduleId: 'default.footer.ad', minWidth: '768'})

    #footer.footer__container.module(data-module='decorators/trackingDecorator')
        .footer.module(data-module='decorators/fixedFooterDecorator', data-anchor='#footer')
            +galleryAd()
            .footer__header
                a.footer__logo(href='/' data-tracking-link-name='footer_logo')
                a.footer__link__facebook(target='_blank', href=facebookUrl, data-tracking-link-name='footer_facebook')
                a.footer__link__twitter(target='_blank', href=twitterUrl, data-tracking-link-name='footer_twitter')

            .footer__links
                ul.footer__list
                    each link, index in links
                        li.footer__item
                            a(href=link.url, title=link._name, target='_blank', data-tracking-link-name="footer-#{index}") #{link._name}
                a.footer__top-link(href='#', data-tracking-link-name='footer_backtotop')
                    .footer__top-link--icon
