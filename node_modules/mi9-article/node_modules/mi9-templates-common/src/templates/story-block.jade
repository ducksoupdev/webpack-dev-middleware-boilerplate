.storyblock(class=!storyBlock.image ? 'has-no-image' : '', data-content-id=storyBlock.id)
    if storyBlock.image
        a(class="story-block__image hero #{storyBlock.templateName} #{storyBlock.portraitClasses} #{storyBlock.portraitHero}"
        href="#{storyBlock.link}" data-tracking-link-name="feed_#{storyBlock.templateName}_image")
            if kicker
                .story-block__kicker-outer
                    .story-block__kicker
            != includePartial('image-resizer-figure--ext', {media: storyBlock.image})

    .text-wrapper(class=clamp)
        a(class='heading-link' href="#{storyBlock.link}" data-tracking-link-name="feed_#{storyBlock.templateName}_headine")
            if !storyBlock.image && storyBlock.kicker
                .story-block__kicker-outer
                    .story-block__kicker
                        != storyBlock.kicker

            .story-block__headline
                != storyBlock.headline

        p.story-block__standfirst
            != storyBlock.standfirst

    .story-block__byline
        if storyBlock.sectionTag
            .story-block__section-tag
                != storyBlock.sectionTag
        if storyBlock.author
            .author
                span By
                span.author__name
                    != storyBlock.author
        span.story-block__time.time
            if storyBlock.displayTime
                != storyBlock.displayTime

        if settings.enableGigyaSharingButtons
            .story-block__share.share--simple
                - storyBlock.isTakeover = true
                != includePartial('share--ext', {content: storyBlock})
