block image-resizer
    if model.url
        - var alt = model.alt;
        - var width = model.width;
        - var height = model.height;
        - var aspect = model.width / model.height;
        - var padding = model.height / model.width * 100;
        - var url = model.url;
        - var urlSet = model.urlSet;

        figure(
            class=['image-resizer', width ? 'image-resizer--placeholder' : '']
            style=width ? "padding-top: #{padding}%" : false
        )
            img.image-resizer__image(alt=alt, src='http://9news.static9.net.au/Content/images/1x1.gif', data-image-resizer, data-src-set=urlSet, data-aspect=aspect)
            noscript
                .image-resizer--nojs
                    img.image-resizer__image.image-resizer__image--nojs(alt=alt, src=url, data-image-resizer)

